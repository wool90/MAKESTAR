{
  "name": "makestar",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/wool90/MAKESTAR.git",
  "author": "isaac <n.wool90@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prettier": "prettier --write './src/**/*.ts'",
    "lint": "tslint -p . -c tslint.json",
    "dev": "SHUTDOWNTIMEOUT=100 nodemon --signal SIGINT --exec node -r dotenv/config --stack_size=4096 --max-old-space-size=4096 -r ts-node/register/transpile-only -r tsconfig-paths/register src/server.ts",
    "build": "tsc --build",
    "start": "node -r dotenv/config --stack_size=4096 --max-old-space-size=4096 -r ts-node/register/transpile-only -r tsconfig-paths/register src/server.ts",
    "test": "SHUTDOWNTIMEOUT=100 nodemon --signal SIGINT --exec node -r dotenv/config --stack_size=4096 --max-old-space-size=4096 -r ts-node/register/transpile-only -r tsconfig-paths/register src/simple.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@edcarroll/koa-router-decorators": "^1.0.0",
    "config": "^3.3.11",
    "dotenv": "^16.4.5",
    "koa": "^2.15.2",
    "koa-bodyparser": "^4.4.1",
    "koa-router": "^12.0.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typedi": "^0.10.0"
  },
  "devDependencies": {
    "@types/config": "^3.3.4",
    "@types/koa": "^2.15.0",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-router": "^7.4.8",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "tslint": "^6.1.3",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^5.4.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-checkout": "yarn"
    }
  },
  "lint-staged": {
    "./src/**/*.ts": [
      "prettier --write",
      "tslint -p .",
      "git add"
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).ts?(x)",
      "**/__tests__/**/*.ts?(x)"
    ],
    "preset": "ts-jest"
  }
}
