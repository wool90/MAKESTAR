{
    "ts-node": {
       "require": ["tsconfig-paths/register"]
    },
    "compilerOptions": {
       "target": "es2017",
       "module": "commonjs",
       "moduleResolution": "node",
       "outDir": "./dist",
       "emitDecoratorMetadata": true,
       "experimentalDecorators": true,
       "sourceMap": true,
       "sourceRoot": "src",
       "baseUrl": "src",
       "paths": {
            "*": [
                "*"
            ]
       },
    },
    "include": [
       "src/**/*.ts"
    ],
}
